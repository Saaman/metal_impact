<div id="artists_association">
	<% product.artists.each do |artist| %>
		<div class="label artist_label">

			<div style="float: right;">
				<%= check_box_tag "#{product_name}_artist_ids_#{artist.id}", artist.id, true, name: "#{product_name}[artist_ids[]]" %>
			</div>
			<div>
				<div><h3><%= artist.name.upcase %></h3></div>
				<div><%= truncate artist.countries_labels().join(" / "), :length => 45, class: "check_boxes optional" %></div>
			</div>
		</div>
	<% end %>
		<div class="row controls-bar">
		<div class="span5">
			<div class="control-group string" style="margin-top: 10px;">
				<label class="string control-label"><%= t 'artists.screens.artists_for_products.add_artist_label' %></label>
				<div class="controls">
					<%= text_field_tag 'artist_typeahead', nil, :size => 40, :placeholder => t('defaults.search_terms'), class: 'string' %>
				</div>
			</div>
		</div>
		<div class="span2">
			<button type="button" id="cancel_artists_deletions" class="btn" disabled="true"><%= t 'artists.screens.artists_for_products.cancel_all_deletions' %></button>
		</div>
	</div>
</div>