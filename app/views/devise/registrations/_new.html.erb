<div class="modal-header">
  <button class="close" data-dismiss="modal">Ã—</button>
  <h3><%= t('.title') %></h3>
  <%= render 'shared/flashes' %>
	<% unless resource.errors[:base].empty? %>
		<%= content_tag(:div, resource.errors[:base].first.html_safe, class: "alert alert-error") %>
	<% end %>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :defaults => { :label_html => { :class => 'span3' }, :placeholder => false}, remote: true) do |f| %>
	
	<div class="modal-body"  id="new_user_registration">
		<%= render 'form', f: f %>
	</div>
	
	<div class="modal-footer">
		<%= my_recaptcha_tags ajax: true %>
		<%= render "links" %>
		<div class="btn-toolbar">
			<%= f.button :submit, :class => 'btn-primary' %>
		  <button class="btn btn-small" data-dismiss="modal"><%= t("helpers.cancel") %></button>
    </div>
	</div>

<% end %>