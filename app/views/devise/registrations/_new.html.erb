<div class="modal-header">
  <button class="close" data-dismiss="modal">Ã—</button>
  <h3><%= t '.title' %></h3>
  <%= render 'shared/flashes' %>
	<% unless resource.errors[:base].empty? %>
  	<%= render 'shared/single_error', :collection => resource.errors[:base] %>
	<% end %>
</div>

<%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :defaults => {:placeholder => false}, remote: true, html: {class: 'form-horizontal-large', :honeypot => true } do |f| %>

	<div class="modal-body"  id="new_user_registration">
		<%= render 'form', f: f %>
	</div>

	<div class="modal-footer">
		<%= render "links" %>
		<div class="btn-toolbar">
			<%= f.button :submit, :class => 'btn-primary' %>
		  <button class="btn btn-small" data-dismiss="modal"><%= t "helpers.cancel" %></button>
    </div>
	</div>

<% end %>