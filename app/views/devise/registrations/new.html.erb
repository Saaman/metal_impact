<h2><%= t('.title') %></h2>
<div class="row centeredblock"  style="width:65%;">

		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :defaults => { :label_html => { :class => 'span3' }, :placeholder => false}, remote: true) do |f| %>
			
			<%= render 'form', f: f %>
			<div class="row">
				<div class="span4"><%= recaptcha_tags %></div>
				<div class="span2 all-center">
					<%= f.button :submit, :class => 'btn-primary' %>
		    </div>
			</div>
		<% end %>

</div>