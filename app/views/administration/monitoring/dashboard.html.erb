<h1><%= t '.title' %></h1>
<div class="row-fluid">
	<div class="span8">
		<% if @contributions_count > 0 %>
			<p>
				<%= t '.pending_contributions', count: @contributions_count %>
				<%= link_to(administration_contributions_path, { class: 'btn'}) do %>
					<%= t '.validate_contributions' %><i class="icon-hand-right"></i>
				<% end %>
			</p>
		<% end %>
	</div>
	<div class="span4">
		<div class="well center">
			<%= link_to('/dj_mon', {target: '_blank', class: 'btn btn-info'}) do %>
				<i class="icon-road"></i><%= t '.monitor_jobs' %>
			<% end %>
			<br />
			<%= form_tag toggle_debug_path do %>
				<%= button_tag class: 'btn btn-danger', style: 'margin-top:20px;' do %>
					<i class="icon-warning-sign"></i><%= ' ' + toggle_debug_button_text(@dashboard.allow_debug) %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>