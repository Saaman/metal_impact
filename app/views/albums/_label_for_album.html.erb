<div class="row-fluid content">

<% if can? :create, MusicLabel %>

  <div class="span4">
    <ul class="nav nav-pills nav-stacked side-padded" id="label_for_album_pills">
      <li class="active">
        <a href="#label_finder" data-toggle="pill"><%= t '.select_existing_label' %></a>
      </li>
      <li><a href="#label_form" data-toggle="pill" id="create_new_music_label_pill"><%= t '.create_label'%></a></li>
    </ul>
  </div>

  <div class="span7">
    <div class="tab-content">
      <div class="tab-pane active" id="label_finder">

<% end %>

        <div><%= f.association :music_label, :prompt => t('.select_label'), input_html: {class: 'skipval'} %></div>
        <div class="side-padded"><div class="well" id="music_label_block">
          <%= render(partial: "music_labels/smallblock", :locals => {music_label: @album.music_label}) unless @album.music_label.nil? %>
        </div></div>

<% if can? :create, MusicLabel %>

      </div>

      <div class="tab-pane" id="label_form">
        <%= f.fields_for :music_label do |music_label_form| %>
          <%= render :partial => 'music_labels/form', :locals => {:f => music_label_form} %>
        <% end %>
      </div>
    </div>
  </div>

<% end %>
  
  <%= hidden_field_tag 'album[create_new_music_label]', false %>

</div>