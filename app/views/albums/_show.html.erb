<p>
  <span class="album-title">
  	<%= artists_links_for(album) %>
  	<%= " / #{album.title} (#{album.release_date.year})" %>
  </span>
</p>

<div class="portrait"><%= normal_image_tag album.cover %></div>
<div>
	<div>
		<i><%= t_attr_show album, 'music_label' %></i><%= album.music_label_name %>
	</div>
	<div>
		<i><%= t_attr_show album, 'release_date' %></i><%= l album.release_date, :format => :long %>
	</div>
	<div>
		<i><%= t_attr_show album, 'kind' %></i><%= t_enum album, :kind %>
	</div>
</div>

<br style="clear: left" />
