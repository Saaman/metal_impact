<h1><%= t '.title'%></h1>

<br />
<%= link_to t('.create_new_album'), new_album_path if can?(:create, Album) %>
<div class='pull-right'>
  <%= t 'defaults.sort_by' %>
  <%= sorting_select 'albums', 'sort_by', @sort_presenter, albums_path %>
</div>
<br />
<br />

<table class="table table-striped table-hover">
  <tbody>
    <%= render :partial => "line_block", :collection => @albums, :as => :product %>
  </tbody>
</table>

<br />

<%= will_paginate @albums %>
