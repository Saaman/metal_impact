<!DOCTYPE html>
<html>
  <head>
    <title>In Construction</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
    <SCRIPT language="Javascript">
      I18n.locale = "<%= I18n.locale %>"
    </SCRIPT>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <div class="span12">
        <div class="row">
          <div class="leftzone span3">
            <%= render 'layouts/fake_left' %>
          </div>
          <div class="contentzone span9">
            <% flash.each do |key, value| %>
              <%= content_tag(:div, value, class: "alert alert-#{key}", id: "#{key}") %>
            <% end %>
            <%= yield %>
          </div>
        </div>
        <%= render 'layouts/footer' %>
      </div>
    </div>
    <%= debug(params) if Rails.env.development? %>
  </body>
 </html>